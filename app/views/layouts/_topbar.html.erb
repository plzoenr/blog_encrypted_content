<div class="bg-[#1a1a1b] text-white px-4 py-2 flex items-center justify-between shadow-md">
  <div class="flex items-center space-x-2">
    <span class="text-xl font-semibold"><%= link_to 'Blogdit', '/' %></span>
  </div>

  <div class="flex-1 mx-4">
    <input type="text"
           placeholder="Just for beautiful, Can't search anything"
           class="w-full bg-[#272729] text-white px-4 py-2 rounded-full focus:outline-none focus:ring focus:ring-orange-500">
  </div>

  <div class="flex items-center space-x-4">
    <%= link_to import_path do %>
      <button class="btn bg-orange-500 px-4 py-2 rounded-full text-white font-medium hover:bg-orange-600 disabled:bg-gray-500"
        <%= current_page?(import_path) ? 'disabled' : '' %>
      >
        Import
      </button>
    <% end %>

    <%= link_to 'Export',
                export_path,
                target: "_blank",
                class: 'btn bg-orange-500 px-4 py-2 rounded-full text-white font-medium hover:bg-orange-600'
    %>
  </div>
</div>
