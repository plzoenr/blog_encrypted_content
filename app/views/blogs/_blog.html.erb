<div id="content_element" class="items-center text-gray-500 text-sm mt-4" data-blog-target="content">
  <div data-blog-target="content">
    Author by <%= blog.author %> / created at <%= blog.created_at.strftime('%d/%m/%Y %H:%M:%S') %>

    <% if context == 'show_page' %>
      <div class="mt-5 p-4 w-100">
        <%= blog.content.html_safe %>
      </div>
    <% else %>
      <div class="line-clamp-3 max-w-[80ch] break-words">
        <%#= use strip_tags in content have image, that image should not show in index page %>
        <%= strip_tags(blog.content.html_safe) %>
      </div>

      <div class="flex justify-end mt-2">
        <%= link_to "Read more >>",
                    show_blog_path(blog),
                    class: "text-sm text-blue-500" %>
      </div>
    <% end %>
  </div>
</div>
