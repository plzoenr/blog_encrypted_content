<div class="mt-2">
  <%= link_to '<< Back to Home', '/', class: 'text-sm text-blue-500' %>
</div>

<div class="mt-3">
  <% content_for :title, "Showing blog test confirm done deploy" %>
</div>

<div class="mt-3 w-full" data-controller="blog">
  <div class="flex">
    <div class="w-2/3">
      <h1 class="font-bold text-4xl">
        <%= @blog.slug %>
      </h1>
    </div>

    <div class="w-1/3 text-right mr-5">
      <button
        class="bg-orange-500 px-4 py-2 rounded-full text-white font-medium hover:bg-orange-600"
        data-action="click->blog#edit"
      >
        Edit
      </button>
    </div>
  </div>

  <div id="main_content">
    <%= render "main_content", blog: @blog %>
  </div>
</div>
