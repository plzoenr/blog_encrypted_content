<turbo-frame id="blog_form">
  <div id="form_element" data-blog-target="form" class="<%= hidden_form ? 'hidden' : '' %>">
    <%= form_with model: blog,
                  url: blog_path(blog),
                  data: { turbo: true } do |f| %>

      <div class="mt-3">
        <%= f.label :author, class: 'block text-white text-sm font-bold mb-2' %>
        <%= f.text_field :author, class: "w-full p-2 bg-gray-800 text-white placeholder-gray-400 border border-gray-600 rounded-md" %>
      </div>

      <div class="mt-3">
        <%= f.label :content, class: 'block text-white text-sm font-bold mb-2' %>
        <div data-controller="tinymce">
          <%= f.text_area :content,
                          class: "tinymce",
                          rows: 40,
                          id: "tinymce-editor",
                          data: {"tinymce-target": 'textarea'}
          %>
        </div>
      </div>

      <div class="mt-2 space-x-2 text-right">
        <button type="button"
                class="bg-gray-500 px-4 py-2 rounded text-white"
                data-action="click->blog#cancel">
          Cancel
        </button>

        <%= f.submit "Save",
                     class: "bg-orange-500 px-4 py-2 rounded text-white"
        %>
      </div>
    <% end %>
  </div>
</turbo-frame>
